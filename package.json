{
  "name": "backslide",
  "version": "2.0.0",
  "description": "CLI tool for making HTML presentations with Remark.js using Markdown",
  "repository": "sinedied/backslide",
  "keywords": [
    "cli",
    "markdown",
    "html",
    "slideshow",
    "presentation",
    "slides",
    "remark",
    "server",
    "utility",
    "pdf",
    "decktape",
    "sass"
  ],
  "author": "Yohan Lasorsa",
  "license": "MIT",
  "main": "backslide.js",
  "bin": {
    "bs": "./bin/bs"
  },
  "scripts": {
    "start": "node ./bin/bs serve example",
    "clean": "rm -rf .tmp dist",
    "test": "eslint *.js",
    "export": "node ./bin/bs export example",
    "deploy": "npm run clean && npm run export && gh-pages -d dist",
    "postpublish": "git tag -a $npm_package_version -m '$npm_package_version' && git push --tags",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "dependencies": {
    "browser-sync": "^2.18.8",
    "decktape": "^2.2.1",
    "fs-extra": "^4.0.1",
    "glob": "^7.1.1",
    "inliner": "^1.11.0",
    "minimist": "^1.2.0",
    "mustache": "^2.3.0",
    "node-sass": "^4.5.2",
    "progress": "^2.0.0",
    "snyk": "^1.41.1"
  },
  "devDependencies": {
    "eslint": "^4.6.1",
    "gh-pages": "^1.0.0"
  },
  "engines": {
    "node": ">=7.6.0"
  },
  "snyk": true
}
