{
  "name": "backslide",
  "version": "2.6.2",
  "description": "CLI tool for making HTML presentations with Remark.js using Markdown",
  "repository": "sinedied/backslide",
  "keywords": [
    "cli",
    "markdown",
    "html",
    "slideshow",
    "presentation",
    "slides",
    "remark",
    "server",
    "utility",
    "pdf",
    "decktape",
    "sass"
  ],
  "author": "Yohan Lasorsa",
  "license": "MIT",
  "main": "backslide.js",
  "bin": {
    "bs": "./bin/bs"
  },
  "scripts": {
    "init": "cp -R starter/template template",
    "start": "npm run init -s && node ./bin/bs serve example",
    "clean": "rm -rf .tmp dist pdf template",
    "lint": "xo *.js",
    "lint:fix": "xo --fix",
    "test": "xo *.js",
    "export": "npm run init -s && node ./bin/bs export example",
    "pdf": "npm run init -s && node ./bin/bs pdf example",
    "deploy": "npm run clean && npm run export && gh-pages -d dist",
    "postpublish": "git tag -a $npm_package_version -m \"$npm_package_version\" && git push --tags"
  },
  "dependencies": {
    "browser-sync": "^2.26.7",
    "command-exists": "^1.2.9",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "mime": "^2.4.5",
    "minimist": "^1.2.5",
    "mustache": "^4.0.1",
    "node-sass": "^5.0.0",
    "progress": "^2.0.3",
    "update-notifier": "^5.0.1",
    "web-resource-inliner": "^5.0.0"
  },
  "devDependencies": {
    "gh-pages": "^3.1.0",
    "xo": "^0.37.1"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "node"
    ],
    "rules": {
      "promise/prefer-await-to-then": "off",
      "unicorn/no-process-exit": "off",
      "max-params": "off"
    }
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "bin",
    "starter",
    "backslide.js"
  ]
}
